{
    "analysis":{
       "analyzer":{
          "nori_analyzer":{
             "type":"custom",
             "tokenizer":"nori_t_discard",
             "filter":[
                "synonym",
                "lowercase",
                "nori_posfilter",
                "nori_readingform"
             ],
             "char_filter":[
                "char_filter"
             ]
          },
          "icu_analyzer":{
             "type":"custom",
             "tokenizer":"icu_tokenizer",
             "filter":[
                "icu_folding"
             ],
             "char_filter":[
                "nfd_normalizer"
             ]
          }
       },
       "tokenizer":{
          "nori_t_discard":{
             "type":"nori_tokenizer",
             "decompound_mode":"mixed",
             "user_dictionary":"medi_dictionary.txt"
          }
       },
       "char_filter":{
          "char_filter":{
             "type":"mapping",
             "mappings":[
                "% => _percent_",
                "- => _minus_"
             ]
          },
          "nfd_normalizer":{
             "mode":"decompose",
             "name":"nfc",
             "type":"icu_normalizer"
          }
       },
       "filter":{
         "synonym": {
            "type" : "synonym", 
            "synonyms_path" : "medi_synonyms.txt"
          },
          "nori_posfilter":{
             "type":"nori_part_of_speech",
             "stoptags":[
                "E",
                "IC",
                "J",
                "MAG",
                "NA",
                "NR",
                "SC",
                "SE",
                "SH",
                "SP",
                "SSC",
                "SSO",
                "SY",
                "UNA",
                "UNKNOWN",
                "VCP",
                "VSV",
                "XPN",
                "XR",
                "XSA",
                "XSN",
                "XSV"
             ]
          }
       }
    }
 }